<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
android:background="@color/white"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"

        android:orientation="horizontal">
    <com.app.amanrow.customview.CustomTextView
        android:id="@+id/txt_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Case Client Name"
        android:singleLine="true"
        android:textColor="@color/txt_header"
        android:textSize="16sp"
        app:edittextfont="OpenSans-Regular.ttf"  />
        <ImageView
            android:id="@+id/indicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:src="@mipmap/add" />

    </RelativeLayout>
    <LinearLayout
        android:id="@+id/lay_placehlder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:weightSum="6">
        <com.app.amanrow.customview.CustomTextView

            android:layout_width="0dp"
            android:layout_weight="1.5"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:text="@string/case_code"
            android:textStyle="bold"
            android:textSize="14sp"
             android:textColor="@color/gray_txt"
            app:edittextfont="OpenSans-Bold.ttf" />
        <com.app.amanrow.customview.CustomTextView

            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2.5"
            android:layout_marginTop="5dp"
            android:text="Case Subject"
            android:gravity="center"
            android:textColor="@color/gray_txt"
            android:textSize="14sp"
            app:edittextfont="OpenSans-Bold.ttf" />
        <com.app.amanrow.customview.CustomTextView

            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:layout_marginTop="5dp"
            android:text="Court Name"
            android:gravity="center"
            android:textColor="@color/gray_txt"
            android:textSize="14sp"
            app:edittextfont="OpenSans-Bold.ttf" />

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:background="@color/gray"></View>
</LinearLayout>
