<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item>

        <layer-list>

            <item>
                <shape>

                    <gradient android:angle="90" android:endColor="@color/transparent" android:startColor="@color/transparent" android:type="linear" />

                    <stroke android:width="1dp" android:color="@color/transparent" />

                    <corners android:radius="5dp" />

                    <padding android:bottom="3dp" android:left="3dp" android:right="3dp" android:top="3dp" />
                </shape>
            </item>

            <item android:right="5dp">

                <bitmap android:gravity="center_vertical|right" android:src="@mipmap/drop_down_arrow" />

            </item>

        </layer-list>

    </item>

</selector>